{
    "name" : "Signature Extension",
    "manifest_version" : 3,
    "description": "Allows you to add a signature and imprint it on a pdf",
    "version": "1.0",
    
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": [
            "<all_urls>"
          ],
          "css": ["content.css"]
        }
    ],

    "icons" : {
        "32": "assets/icon-32.png",
        "48": "assets/icon-64.png"
    },
    
    "action": {
        "default_icon": {
            "32": "assets/icon-32.png",
            "48": "assets/icon-64.png"
        },
        "default_popup":"./popup/popup.html",
        "default_title":"Signature Extension"
    },
    "permissions": ["activeTab","tabs","storage", "scripting"],

    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
          "resources": [
            "create.html",
            "create.js",
            "create.css"
          ],
          "matches": ["<all_urls>"]
        }
      ]    
}


